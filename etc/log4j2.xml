<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="info" name="Wordle 2E" packages="es.unileon.prg1.wordle">
<Appenders>
    <File name="Log" fileName="log/log.log">
        <PatternLayout>
            <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
        </PatternLayout>
    </File>
    <Async name="Async">
        <AppenderRef ref="Log"/>
    </Async>
</Appenders>
<Loggers>

    <Root level="info">
        <AppenderRef ref="Log"/>
    </Root>
</Loggers>
</Configuration>




